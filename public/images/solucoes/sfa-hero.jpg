<svg width="1200" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="sfa-bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a0600;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#330d00;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#4d1400;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="sfa-glow1" cx="35%" cy="50%">
      <stop offset="0%" style="stop-color:#ff5722;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#ff5722;stop-opacity:0" />
    </radialGradient>
    <radialGradient id="sfa-glow2" cx="65%" cy="50%">
      <stop offset="0%" style="stop-color:#ff7043;stop-opacity:0.6" />
      <stop offset="100%" style="stop-color:#ff7043;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="600" fill="url(#sfa-bg)"/>
  
  <!-- Glows -->
  <circle cx="420" cy="300" r="350" fill="url(#sfa-glow1)"/>
  <circle cx="780" cy="300" r="300" fill="url(#sfa-glow2)"/>
  
  <!-- Mobile Phone -->
  <g transform="translate(450, 150)">
    <rect x="0" y="0" width="180" height="320" rx="20" fill="#1a1a1a" opacity="0.7"/>
    <rect x="10" y="10" width="160" height="300" rx="10" fill="#0a0a0a" opacity="0.9"/>
    
    <!-- Phone Screen Content -->
    <rect x="20" y="30" width="140" height="20" rx="5" fill="#ff5722" opacity="0.6"/>
    <rect x="20" y="60" width="100" height="10" rx="3" fill="#ff7043" opacity="0.5"/>
    <rect x="20" y="80" width="140" height="60" rx="5" fill="#ff5722" opacity="0.3"/>
    <rect x="20" y="150" width="60" height="40" rx="5" fill="#ff7043" opacity="0.4"/>
    <rect x="100" y="150" width="60" height="40" rx="5" fill="#ff7043" opacity="0.4"/>
    <rect x="20" y="200" width="140" height="80" rx="5" fill="#ff5722" opacity="0.3"/>
    
    <!-- Home Button -->
    <circle cx="90" cy="300" r="8" fill="#ff5722" opacity="0.5"/>
  </g>
  
  <!-- Location Pin -->
  <g transform="translate(250, 200)">
    <path d="M 20 0 Q 0 0 0 20 Q 0 35 20 60 Q 40 35 40 20 Q 40 0 20 0" 
          fill="none" stroke="#ff5722" stroke-width="3" opacity="0.6"/>
    <circle cx="20" cy="20" r="8" fill="#ff5722" opacity="0.8"/>
  </g>
  
  <!-- Route Path -->
  <g opacity="0.4">
    <path d="M 200 500 Q 300 450 400 480 T 600 500" 
          fill="none" stroke="#ff5722" stroke-width="3" stroke-dasharray="10,5"/>
    <circle cx="200" cy="500" r="8" fill="#ff5722"/>
    <circle cx="400" cy="480" r="8" fill="#ff7043"/>
    <circle cx="600" cy="500" r="8" fill="#ff5722"/>
  </g>
  
  <!-- Sales Chart -->
  <g transform="translate(700, 200)">
    <rect x="0" y="80" width="30" height="80" fill="#ff5722" opacity="0.5" rx="3"/>
    <rect x="45" y="50" width="30" height="110" fill="#ff7043" opacity="0.6" rx="3"/>
    <rect x="90" y="30" width="30" height="130" fill="#ff5722" opacity="0.7" rx="3"/>
    <rect x="135" y="10" width="30" height="150" fill="#ff7043" opacity="0.8" rx="3"/>
    <polyline points="15,80 60,50 105,30 150,10" 
              fill="none" stroke="#ff5722" stroke-width="2" opacity="0.9"/>
  </g>
  
  <!-- Target Icon -->
  <g transform="translate(950, 400)">
    <circle cx="0" cy="0" r="50" fill="none" stroke="#ff5722" stroke-width="2" opacity="0.3"/>
    <circle cx="0" cy="0" r="30" fill="none" stroke="#ff7043" stroke-width="2" opacity="0.5"/>
    <circle cx="0" cy="0" r="10" fill="#ff5722" opacity="0.7"/>
  </g>
  
  <!-- SFA Text -->
  <text x="600" y="540" font-family="Arial, sans-serif" font-size="120" font-weight="bold" fill="#ff5722" text-anchor="middle" opacity="0.15">SFA</text>
</svg>


