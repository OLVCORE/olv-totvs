<svg width="1200" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="mkt-bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a0a00;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#331400;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#4d2600;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="mkt-glow1" cx="25%" cy="50%">
      <stop offset="0%" style="stop-color:#ff6b35;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#ff6b35;stop-opacity:0" />
    </radialGradient>
    <radialGradient id="mkt-glow2" cx="75%" cy="50%">
      <stop offset="0%" style="stop-color:#ffa726;stop-opacity:0.6" />
      <stop offset="100%" style="stop-color:#ffa726;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="600" fill="url(#mkt-bg)"/>
  
  <!-- Glows -->
  <circle cx="300" cy="300" r="350" fill="url(#mkt-glow1)"/>
  <circle cx="900" cy="300" r="300" fill="url(#mkt-glow2)"/>
  
  <!-- Megaphone Icon -->
  <g transform="translate(450, 200)">
    <path d="M 10 50 L 50 30 L 50 90 L 10 70 Z" fill="#ff6b35" opacity="0.6"/>
    <rect x="0" y="45" width="15" height="30" fill="#ff6b35" opacity="0.6" rx="3"/>
    <path d="M 50 30 Q 100 20 120 30 Q 100 40 50 90" fill="none" stroke="#ffa726" stroke-width="4" opacity="0.8"/>
  </g>
  
  <!-- Target Circles -->
  <g transform="translate(850, 300)">
    <circle cx="0" cy="0" r="80" fill="none" stroke="#ff6b35" stroke-width="3" opacity="0.3"/>
    <circle cx="0" cy="0" r="50" fill="none" stroke="#ffa726" stroke-width="3" opacity="0.5"/>
    <circle cx="0" cy="0" r="20" fill="#ff6b35" opacity="0.7"/>
  </g>
  
  <!-- Growth Chart -->
  <g opacity="0.4">
    <line x1="150" y1="450" x2="150" y2="300" stroke="#ff6b35" stroke-width="3"/>
    <line x1="150" y1="450" x2="300" y2="450" stroke="#ff6b35" stroke-width="3"/>
    <polyline points="150,450 180,420 210,400 240,360 270,320 300,300" 
              fill="none" stroke="#ffa726" stroke-width="4" stroke-linecap="round"/>
    <circle cx="180" cy="420" r="5" fill="#ffa726"/>
    <circle cx="210" cy="400" r="5" fill="#ffa726"/>
    <circle cx="240" cy="360" r="5" fill="#ffa726"/>
    <circle cx="270" cy="320" r="5" fill="#ffa726"/>
    <circle cx="300" cy="300" r="5" fill="#ffa726"/>
  </g>
  
  <!-- Campaign Waves -->
  <g opacity="0.2">
    <path d="M 0 100 Q 150 80 300 100 T 600 100" fill="none" stroke="#ff6b35" stroke-width="2"/>
    <path d="M 600 500 Q 750 480 900 500 T 1200 500" fill="none" stroke="#ffa726" stroke-width="2"/>
  </g>
  
  <!-- ROI Text -->
  <text x="600" y="520" font-family="Arial, sans-serif" font-size="100" font-weight="bold" fill="#ff6b35" text-anchor="middle" opacity="0.15">ROI+</text>
</svg>

