<svg width="1200" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="ia-bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a0033;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#2d0052;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#4a0080;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="ia-glow1" cx="30%" cy="40%">
      <stop offset="0%" style="stop-color:#9c27b0;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#9c27b0;stop-opacity:0" />
    </radialGradient>
    <radialGradient id="ia-glow2" cx="70%" cy="60%">
      <stop offset="0%" style="stop-color:#e91e63;stop-opacity:0.6" />
      <stop offset="100%" style="stop-color:#e91e63;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="600" fill="url(#ia-bg)"/>
  
  <!-- Glows -->
  <circle cx="360" cy="240" r="300" fill="url(#ia-glow1)"/>
  <circle cx="840" cy="360" r="250" fill="url(#ia-glow2)"/>
  
  <!-- Neural Network -->
  <g opacity="0.3">
    <line x1="200" y1="150" x2="400" y2="200" stroke="#9c27b0" stroke-width="2"/>
    <line x1="200" y1="150" x2="400" y2="300" stroke="#9c27b0" stroke-width="2"/>
    <line x1="200" y1="150" x2="400" y2="400" stroke="#9c27b0" stroke-width="2"/>
    <line x1="400" y1="200" x2="600" y2="250" stroke="#e91e63" stroke-width="2"/>
    <line x1="400" y1="300" x2="600" y2="250" stroke="#e91e63" stroke-width="2"/>
    <line x1="400" y1="400" x2="600" y2="350" stroke="#e91e63" stroke-width="2"/>
    <line x1="600" y1="250" x2="800" y2="300" stroke="#9c27b0" stroke-width="2"/>
    <line x1="600" y1="350" x2="800" y2="300" stroke="#9c27b0" stroke-width="2"/>
  </g>
  
  <!-- Neural Nodes -->
  <circle cx="200" cy="150" r="10" fill="#9c27b0" opacity="0.6"/>
  <circle cx="400" cy="200" r="10" fill="#e91e63" opacity="0.6"/>
  <circle cx="400" cy="300" r="10" fill="#e91e63" opacity="0.6"/>
  <circle cx="400" cy="400" r="10" fill="#e91e63" opacity="0.6"/>
  <circle cx="600" cy="250" r="10" fill="#9c27b0" opacity="0.6"/>
  <circle cx="600" cy="350" r="10" fill="#9c27b0" opacity="0.6"/>
  <circle cx="800" cy="300" r="15" fill="#e91e63" opacity="0.8"/>
  
  <!-- Brain Icon -->
  <g transform="translate(900, 200)">
    <path d="M 50 20 Q 60 10 70 20 Q 80 10 90 20 Q 100 30 100 45 Q 100 60 90 70 Q 80 80 70 80 Q 60 80 50 70 Q 40 60 40 45 Q 40 30 50 20" 
          fill="none" stroke="#9c27b0" stroke-width="3" opacity="0.6"/>
    <circle cx="55" cy="35" r="3" fill="#e91e63" opacity="0.8"/>
    <circle cx="70" cy="30" r="3" fill="#e91e63" opacity="0.8"/>
    <circle cx="85" cy="35" r="3" fill="#e91e63" opacity="0.8"/>
    <circle cx="60" cy="50" r="3" fill="#9c27b0" opacity="0.8"/>
    <circle cx="80" cy="50" r="3" fill="#9c27b0" opacity="0.8"/>
  </g>
  
  <!-- Hexagon Pattern -->
  <g opacity="0.1">
    <polygon points="100,50 125,65 125,95 100,110 75,95 75,65" fill="none" stroke="#9c27b0" stroke-width="1"/>
    <polygon points="950,400 975,415 975,445 950,460 925,445 925,415" fill="none" stroke="#e91e63" stroke-width="1"/>
    <polygon points="200,500 225,515 225,545 200,560 175,545 175,515" fill="none" stroke="#9c27b0" stroke-width="1"/>
  </g>
  
  <!-- AI Text -->
  <text x="600" y="500" font-family="Arial, sans-serif" font-size="120" font-weight="bold" fill="#9c27b0" text-anchor="middle" opacity="0.2">AI</text>
</svg>

