<svg width="1200" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="pay-bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#001a0d;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#003320;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#004d33;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="pay-glow1" cx="30%" cy="50%">
      <stop offset="0%" style="stop-color:#4caf50;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#4caf50;stop-opacity:0" />
    </radialGradient>
    <radialGradient id="pay-glow2" cx="70%" cy="50%">
      <stop offset="0%" style="stop-color:#66bb6a;stop-opacity:0.6" />
      <stop offset="100%" style="stop-color:#66bb6a;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="600" fill="url(#pay-bg)"/>
  
  <!-- Glows -->
  <circle cx="360" cy="300" r="350" fill="url(#pay-glow1)"/>
  <circle cx="840" cy="300" r="300" fill="url(#pay-glow2)"/>
  
  <!-- Credit Card -->
  <g transform="translate(200, 200)">
    <rect x="0" y="0" width="280" height="170" rx="15" fill="#1a1a1a" opacity="0.7"/>
    <rect x="0" y="30" width="280" height="40" fill="#4caf50" opacity="0.6"/>
    <rect x="20" y="100" width="80" height="15" rx="3" fill="#66bb6a" opacity="0.8"/>
    <circle cx="250" cy="140" r="20" fill="none" stroke="#4caf50" stroke-width="2" opacity="0.6"/>
    <circle cx="230" cy="140" r="20" fill="none" stroke="#4caf50" stroke-width="2" opacity="0.6"/>
  </g>
  
  <!-- Wallet Icon -->
  <g transform="translate(700, 250)">
    <rect x="0" y="20" width="150" height="100" rx="10" fill="#1a1a1a" opacity="0.6"/>
    <rect x="10" y="30" width="130" height="15" fill="#4caf50" opacity="0.8"/>
    <path d="M 130 70 L 150 70 Q 165 70 165 85 Q 165 100 150 100 L 130 100" 
          fill="none" stroke="#66bb6a" stroke-width="3" opacity="0.7"/>
    <circle cx="157" cy="85" r="5" fill="#4caf50" opacity="0.9"/>
  </g>
  
  <!-- PIX Icon -->
  <g transform="translate(900, 100)">
    <rect x="30" y="0" width="10" height="60" fill="#4caf50" opacity="0.6" transform="rotate(45 35 30)"/>
    <rect x="30" y="0" width="10" height="60" fill="#66bb6a" opacity="0.6" transform="rotate(-45 35 30)"/>
    <circle cx="35" cy="30" r="8" fill="#1a1a1a" opacity="0.8"/>
  </g>
  
  <!-- Payment Flow -->
  <g opacity="0.3">
    <circle cx="200" cy="450" r="30" fill="none" stroke="#4caf50" stroke-width="2"/>
    <circle cx="400" cy="450" r="30" fill="none" stroke="#4caf50" stroke-width="2"/>
    <circle cx="600" cy="450" r="30" fill="none" stroke="#66bb6a" stroke-width="2"/>
    <circle cx="800" cy="450" r="30" fill="none" stroke="#66bb6a" stroke-width="2"/>
    <line x1="230" y1="450" x2="370" y2="450" stroke="#4caf50" stroke-width="2" marker-end="url(#arrow)"/>
    <line x1="430" y1="450" x2="570" y2="450" stroke="#4caf50" stroke-width="2"/>
    <line x1="630" y1="450" x2="770" y2="450" stroke="#66bb6a" stroke-width="2"/>
  </g>
  
  <!-- Check Mark -->
  <g transform="translate(1000, 400)">
    <circle cx="0" cy="0" r="40" fill="none" stroke="#4caf50" stroke-width="3" opacity="0.6"/>
    <path d="M -15 0 L -5 10 L 15 -10" fill="none" stroke="#4caf50" stroke-width="4" stroke-linecap="round" opacity="0.8"/>
  </g>
  
  <!-- PAY Text -->
  <text x="600" y="180" font-family="Arial, sans-serif" font-size="140" font-weight="bold" fill="#4caf50" text-anchor="middle" opacity="0.1">PAY</text>
</svg>







